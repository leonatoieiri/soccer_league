<p id="notice"><%= notice %></p>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Place</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each_with_index do |result, index| %>
      <tr>
        <td>
          <% if index == 0 %>
            CHAMPION
          <% elsif index == 1 %>
            Runner-up
          <% else %>
            <%= (index + 1) %>
          <% end %>
        </td>
        <td><%= result.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
